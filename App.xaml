<Application x:Class="TSmatch.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:TSmatch"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <Style x:Key="InfoPanel" TargetType="StackPanel">
            <Setter Property="Control.Height" Value="16"/>
            <Setter Property="Control.Width" Value="245"/>
            <Setter Property="Control.HorizontalAlignment" Value="Right"/>
            <Setter Property="Control.Margin" Value="0,0,5,0"/>
            <Setter Property="Control.FontSize" Value="14"/>
            <Setter Property="Control.FontFamily" Value="Arial"/>
        </Style>
        <Style x:Key="UnderlinedTextBlock">
            <Setter Property="Control.FontSize" Value="13"/>
            <Setter Property="Control.FontFamily" Value="Arial"/>
            <Setter Property="TextBlock.TextDecorations" Value="Underline" />
        </Style>
    </Application.Resources>
</Application>
